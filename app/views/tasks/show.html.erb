<h1><%= @task.title %></h1>
<%= link_to 'Edit this task', edit_task_path(@task)  %>
<%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
<p><%= @task.details %></p>
<p><%= @task.completed ? "[x]" : "[ ]" %></p>

<%= link_to 'Back to all tasks', root_path()  %>
